{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": 0,
        "import/prefer-default-export": "off",
        "arrow-parens": [
            "error",
            "as-needed",
            {
                "requireForBlockBody": true
            }
        ],
        "consistent-return": [
            "off"
        ],
        "class-methods-use-this": "off",
        "no-underscore-dangle": "off"
    },
    "globals": {
        "localStorage": true
    },
    "parser": "babel-eslint"
}